<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MessageDialog">
        <item name="android:windowBackground">@color/translucent_80</item>
    </style>

    <style name="ProgressTheme" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/royal</item>
    </style>


    <style name="CreateModuleStyle">
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:textColor">@color/black_3f3a3a</item>
        <item name="android:textSize">12dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:letterSpacing">0.15</item>
    </style>

    <style name="WorkoutTextStyle" parent="CreateModuleStyle">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="TaskTextStyle" parent="CreateModuleStyle">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="WorkoutAnnounceStyle" parent="CreateModuleStyle">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="WorkoutTimerStyle" parent="CreateModuleStyle">
        <item name="android:textSize">24dp</item>
    </style>

    <style name="ProgressThemeDark" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppTheme.NumberPicker">
        <item name="colorControlNormal">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
