<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="studio.honidot.litsap.profile.ProfileViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cream">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_profile_header"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_profile_header"
            android:background="@color/royal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/image_profile_avatar"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/profile_actor"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_profile_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/noto_sans"
                android:letterSpacing="0.15"
                android:maxLines="1"
                android:text="@{viewModel.user.userName}"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/button_task1"
                app:layout_constraintStart_toEndOf="@+id/image_profile_avatar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="@string/profile_default_name" />

            <TextView
                android:id="@+id/text_profile_level"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/noto_sans"
                android:letterSpacing="0.15"
                android:maxLines="1"
                app:level="@{viewModel.user.level}"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/progress_bar_level"
                app:layout_constraintStart_toEndOf="@+id/button_task6"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="LV 100" />

            <ImageButton
                android:id="@+id/button_task1"
                android:layout_width="15dp"
                android:layout_height="30dp"
                android:layout_marginTop="4dp"
                android:background="@{viewModel.user.todayDoneCount >0? @drawable/column_done:@drawable/column_yet}"
                android:visibility="@{viewModel.user.ongoingTasks.size()>0? View.VISIBLE:View.INVISIBLE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/button_task2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/image_profile_avatar"
                app:layout_constraintStart_toStartOf="@+id/text_profile_name"
                app:layout_constraintTop_toBottomOf="@+id/text_profile_name"
                tools:background="@drawable/column_done" />

            <ImageButton
                android:id="@+id/button_task2"
                android:layout_width="15dp"
                android:layout_height="30dp"
                android:background="@{viewModel.user.todayDoneCount >1? @drawable/column_done:@drawable/column_yet}"
                android:visibility="@{viewModel.user.ongoingTasks.size()>1? View.VISIBLE:View.INVISIBLE}"
                app:layout_constraintEnd_toStartOf="@+id/button_task3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/button_task1"
                app:layout_constraintTop_toTopOf="@+id/button_task1"
                tools:background="@drawable/column_done" />

            <ImageButton
                android:id="@+id/button_task3"
                android:layout_width="15dp"
                android:layout_height="30dp"
                android:background="@{viewModel.user.todayDoneCount >2? @drawable/column_done:@drawable/column_yet}"
                android:visibility="@{viewModel.user.ongoingTasks.size()>2? View.VISIBLE:View.INVISIBLE}"
                app:layout_constraintEnd_toStartOf="@+id/button_task4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/button_task2"
                app:layout_constraintTop_toTopOf="@+id/button_task1"
                tools:background="@drawable/column_done" />

            <ImageButton
                android:id="@+id/button_task4"
                android:layout_width="15dp"
                android:layout_height="30dp"
                android:background="@{viewModel.user.todayDoneCount >3? @drawable/column_done:@drawable/column_yet}"
                android:visibility="@{viewModel.user.ongoingTasks.size()>3? View.VISIBLE:View.INVISIBLE}"
                app:layout_constraintEnd_toStartOf="@+id/button_task5"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/button_task3"
                app:layout_constraintTop_toTopOf="@+id/button_task1"
                tools:background="@drawable/column_yet" />

            <ImageButton
                android:id="@+id/button_task5"
                android:layout_width="15dp"
                android:layout_height="30dp"
                android:background="@{viewModel.user.todayDoneCount >4? @drawable/column_done:@drawable/column_yet}"
                android:visibility="@{viewModel.user.ongoingTasks.size()>4? View.VISIBLE:View.INVISIBLE}"
                app:layout_constraintEnd_toStartOf="@+id/button_task6"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/button_task4"
                app:layout_constraintTop_toTopOf="@+id/button_task1"
                tools:background="@drawable/column_yet" />

            <ImageButton
                android:id="@+id/button_task6"
                android:layout_width="15dp"
                android:layout_height="30dp"
                android:background="@{viewModel.user.todayDoneCount >5? @drawable/column_done:@drawable/column_yet}"
                android:visibility="@{viewModel.user.ongoingTasks.size()>5? View.VISIBLE:View.INVISIBLE}"
                app:layout_constraintStart_toEndOf="@+id/button_task5"
                app:layout_constraintTop_toTopOf="@+id/button_task1"
                tools:background="@drawable/column_yet" />

            <TextView
                android:id="@+id/text_profile_level_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/noto_sans"
                android:letterSpacing="0.15"
                android:maxLines="2"
                app:experience="@{viewModel.user.experience}"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/text_profile_level"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/text_profile_level"
                tools:text="XP 100/1200" />

            <ProgressBar
                android:id="@+id/progress_bar_level"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:progress="@{viewModel.user.levelProcess}"
                android:max="@{viewModel.user.intervalConstant}"
                app:layout_constraintBottom_toTopOf="@+id/text_profile_info"
                app:layout_constraintEnd_toEndOf="@+id/text_profile_level_info"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/text_profile_level"
                app:layout_constraintTop_toBottomOf="@+id/text_profile_level" />

            <TextView
                android:id="@+id/text_profile_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/noto_sans"
                android:letterSpacing="0.15"
                android:maxLines="2"
                app:levelInfo="@{viewModel.user.ongoingTasks.size() - viewModel.user.todayDoneCount}"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/text_profile_level_info"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/text_profile_level"
                app:layout_constraintTop_toBottomOf="@+id/progress_bar_level"
                tools:text="再努力一下吧!" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_profile_header">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_competition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/noto_sans"
                    android:letterSpacing="0.15"
                    android:text="@string/profile_competition"
                    android:textColor="@color/black_3f3a3a"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_competition"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/white"
                    android:elevation="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_competition">

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/viewpager_catalog"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.tabs.TabLayout
                            android:id="@+id/tabs_catalog"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_competition_tab"
                            app:tabIndicatorColor="@color/black_3f3a3a"
                            app:tabSelectedTextColor="@color/black_3f3a3a"
                            app:tabTextColor="@color/gray_888888">

                        </com.google.android.material.tabs.TabLayout>

                    </androidx.viewpager.widget.ViewPager>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/text_complete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/noto_sans"
                    android:letterSpacing="0.15"
                    android:text="@string/profile_complete"
                    android:textColor="@color/black_3f3a3a"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/text_competition"
                    app:layout_constraintTop_toBottomOf="@+id/constraint_competition" />

                <ImageButton
                    android:id="@+id/button_updown_complete"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:background="@{viewModel.completeOpen?@drawable/down_arrow:@drawable/up_arrow}"
                    android:paddingTop="6dp"
                    android:onClick="@{() -> viewModel.clickCompleteArrow()}"
                    android:paddingBottom="6dp"
                    app:layout_constraintBottom_toBottomOf="@+id/text_complete"
                    app:layout_constraintStart_toEndOf="@+id/text_complete"
                    app:layout_constraintTop_toTopOf="@+id/text_complete"
                    tools:background="@drawable/up_arrow" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_complete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/white"
                    android:visibility="@{viewModel.completeOpen?View.VISIBLE:View.GONE}"
                    android:elevation="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_complete">

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/bar_chart"
                        android:layout_width="0dp"
                        android:layout_height="250dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/text_calendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/noto_sans"
                    android:letterSpacing="0.15"
                    android:text="@string/profile_calendar"
                    android:textColor="@color/black_3f3a3a"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/text_complete"
                    app:layout_constraintTop_toBottomOf="@+id/constraint_complete" />

                <ImageButton
                    android:id="@+id/button_updown_calendar"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:background="@{viewModel.calendarOpen?@drawable/down_arrow:@drawable/up_arrow}"
                    android:onClick="@{() -> viewModel.clickCalendarArrow()}"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    app:layout_constraintBottom_toBottomOf="@+id/text_calendar"
                    app:layout_constraintStart_toEndOf="@+id/text_calendar"
                    app:layout_constraintTop_toTopOf="@+id/text_calendar"
                    tools:background="@drawable/up_arrow" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_calendar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:visibility="@{viewModel.calendarOpen?View.VISIBLE:View.GONE}"
                    android:background="@color/white"
                    android:elevation="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_calendar">


                    <CalendarView
                        android:id="@+id/calendarView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>